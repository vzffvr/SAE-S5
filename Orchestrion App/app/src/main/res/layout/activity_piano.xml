<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parentLayout"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


 <LinearLayout
     android:layout_weight="1"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="0dp">


  <LinearLayout
      android:layout_weight="1"
      android:background="#272727"
      android:layout_width="match_parent"
      android:layout_height="0dp">


   <SeekBar
       android:id="@+id/seekBar"
       android:background="@drawable/scrollbgm"
       android:thumb="@drawable/thumb"
       android:progressDrawable="@android:color/transparent"
       android:layout_marginLeft="100dp"
       android:layout_marginRight="100dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:max="100"
       android:progress="50" />



  </LinearLayout>

 </LinearLayout>



  <HorizontalScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2">

   <RelativeLayout
       android:id="@+id/parentLayoutvv"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/whiteKeysLayout"
        android:background="@color/black"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




     <Button
         android:id="@+id/keyA1"
         style="@style/KeyButtonStyle"
         android:text="A1" />

     <Button
         android:id="@+id/keyB1"
         style="@style/KeyButtonStyle"
         android:text="B1" />

     <Button
         android:id="@+id/keyC1"
         style="@style/KeyButtonStyle"
         android:text="C1" />

     <Button
         android:id="@+id/keyD1"
         style="@style/KeyButtonStyle"
         android:text="D1" />

     <Button
         android:id="@+id/keyE1"
         style="@style/KeyButtonStyle"
         android:text="E1" />


     <Button
         android:id="@+id/keyF1"
         style="@style/KeyButtonStyle"
         android:text="F1" />

     <Button
         android:id="@+id/keyG1"
         style="@style/KeyButtonStyle"
         android:text="G1" />

     <Button
         android:id="@+id/keyA2"
         style="@style/KeyButtonStyle"
         android:text="A2" />

     <Button
         android:id="@+id/keyB2"
         style="@style/KeyButtonStyle"
         android:text="B2" />




     <Button
         android:id="@+id/keyC2"
         style="@style/KeyButtonStyle"
         android:text="C2" />

     <Button
         android:id="@+id/keyD2"
         style="@style/KeyButtonStyle"
         android:text="D2" />

     <Button
         android:id="@+id/keyE2"
         style="@style/KeyButtonStyle"
         android:text="E2" />



     <Button
         android:id="@+id/keyF2"
         style="@style/KeyButtonStyle"
         android:text="F2" />

     <Button
         android:id="@+id/keyG2"
         style="@style/KeyButtonStyle"
         android:text="G2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/blackKeysLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">

     <Button
         android:id="@+id/keyA1Sharp"
         android:layout_marginStart="52dp"
         style="@style/SharpkeyButtonStyle" />

     <Button
         android:id="@+id/keyC1Sharp"
         android:layout_marginStart="100dp"
         style="@style/SharpkeyButtonStyle" />

     <Button
         android:id="@+id/keyD1Sharp"
         android:layout_marginStart="22dp"
         style="@style/SharpkeyButtonStyle" />

     <Button
         android:id="@+id/keyF1Sharp"
         android:layout_marginStart="101dp"
         style="@style/SharpkeyButtonStyle" />

     <Button
         android:id="@+id/keyG1Sharp"
         android:layout_marginStart="25dp"
         style="@style/SharpkeyButtonStyle" />


     <Button
         android:id="@+id/keyA2Sharp"
         android:layout_marginStart="26dp"
         style="@style/SharpkeyButtonStyle" />

     <Button
         android:id="@+id/keyC2Sharp"
         android:layout_marginStart="100dp"
         style="@style/SharpkeyButtonStyle" />

     <Button
         android:id="@+id/keyD2Sharp"
         android:layout_marginStart="22dp"
         style="@style/SharpkeyButtonStyle" />

     <Button
         android:id="@+id/keyF2Sharp"
         android:layout_marginStart="101dp"
         style="@style/SharpkeyButtonStyle" />

     <Button
         android:id="@+id/keyG2Sharp"
         android:layout_marginStart="25dp"
         style="@style/SharpkeyButtonStyle" />

    </LinearLayout>

   </RelativeLayout>

</HorizontalScrollView>




</LinearLayout>